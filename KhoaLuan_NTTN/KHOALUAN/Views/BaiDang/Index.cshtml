@model IEnumerable<BaiDangConnection.HocBong>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="page-content" class="single-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="index.html">Trang Chủ</a></li>
                    <li><a href="category.html">Học Bổng : </a></li>

                </ul>
            </div>
        </div>
        <div class="row">
            <div id="main-content" class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="products">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="product">
                                        <div class="image"><a href="@Url.Action("Details", new { id = item.idHocBong })"><img style="max-width: 100%; height: 200px;"  src="~/Asset/images/@item.HinhAnh" /></a></div>
                                        <div class="caption">
                                            <div class="name"><h3><a href="@Url.Action("Details", new { id = item.idHocBong })">@item.tenHB</a></h3></div>
                                        </div>
                                        <div class="buttons">
                                            <a class="btn cart" href="@Url.Action("Details",new { id= item.idHocBong})"><span type="button" class="btn btn-info">Xem chi tiết</span></a>

                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
      
        </div>
    </div>
</div>

